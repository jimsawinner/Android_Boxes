<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <GridLayout
        android:layout_column="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rowCount="9"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">
        <TextView
            android:id="@+id/page_header"
            android:layout_row="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="75sp"
            android:textColor="#FF0099"
            android:textSize="24sp"
            android:textStyle="bold"
            android:text="@string/planet_facts"/>

        <TextView
            android:id="@+id/circumference"
            android:layout_row="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#0099FF"
            android:textSize="20sp"
            android:text="Circumference"/>

        <TextView
            android:id="@+id/moons"
            android:layout_row="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#0099FF"
            android:textSize="20sp"
            android:text="Moons"/>

        <TextView
            android:id="@+id/orbitperiod"
            android:layout_row="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#0099FF"
            android:textSize="20sp"
            android:text="Solar Year"/>

        <TextView
            android:id="@+id/maxtemp"
            android:layout_row="4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#0099FF"
            android:textSize="20sp"
            android:text="Maximum temperature"/>

        <TextView
            android:id="@+id/earthmonth"
            android:layout_row="5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#0099FF"
            android:textSize="20sp"
            android:text="Earth month"/>

        <Button
            android:id="@+id/add_list_item_btn"
            android:layout_row="6"
            android:text="Add new Planet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"/>

        <Button
            android:id="@+id/go_playBtn"
            android:layout_row="7"
            android:text="Go Play!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:onClick="showGameBoard"/>

        <Chronometer
            android:id="@+id/chronometer_2"
            android:layout_row="8"
            android:format="%s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40sp" />
    </GridLayout>

</FrameLayout>
