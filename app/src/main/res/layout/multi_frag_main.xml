<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="3"
    android:orientation="horizontal">

    <fragment android:name="com.techteamuk.app.android_boxes.fragments.PlanetListFragment"
        android:layout_column="0"
        android:layout_width="125sp"
        android:layout_height="wrap_content"
        android:id="@+id/fragment_left" />

    <fragment android:name="com.techteamuk.app.android_boxes.fragments.PlanetDetailFragment"
        android:layout_column="1"
        android:layout_width="500sp"
        android:layout_height="wrap_content"
        android:id="@+id/fragment_centre"/>

    <fragment android:name="com.techteamuk.app.android_boxes.fragments.PlanetFactsFragment"
        android:layout_column="2"
        android:layout_width="500sp"
        android:layout_height="wrap_content"
        android:id="@+id/fragment_right" />

</GridLayout>